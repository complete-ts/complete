// This is a TypeScript configuration intended to be used by TypeScript programs used in a Bun
// environment:
// https://bun.sh/docs/typescript#suggested-compileroptions
{
  // https://www.typescriptlang.org/tsconfig/
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // The rest of the upstream flags are omitted since they are already handled by
    // "@tsconfig/strictest".
  },
}
